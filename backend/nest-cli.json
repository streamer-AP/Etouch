{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/auth-service",
      "entryFile": "main",
      "sourceRoot": "apps/auth-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth-service/tsconfig.app.json"
      }
    },
    "device-service": {
      "type": "application",
      "root": "apps/device-service",
      "entryFile": "main",
      "sourceRoot": "apps/device-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/device-service/tsconfig.app.json"
      }
    },
    "content-service": {
      "type": "application",
      "root": "apps/content-service",
      "entryFile": "main",
      "sourceRoot": "apps/content-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/content-service/tsconfig.app.json"
      }
    },
    "audio-service": {
      "type": "application",
      "root": "apps/audio-service",
      "entryFile": "main",
      "sourceRoot": "apps/audio-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/audio-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}